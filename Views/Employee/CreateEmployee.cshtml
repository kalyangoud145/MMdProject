@model MMMMedia.ViewModels.EmployeeViewModel
@{
    ViewData["Title"] = "Create/ Update";
}
<div class="mb-2"><small><a asp-action="ViewRecords">Home</a>/Employee Registration</small></div>
<form method="post" style="overflow-x:hidden" enctype="multipart/form-data">
    <div class="offset-3">
        <span class=" row col-sm-6 border pl-5  pb-1 mb-1 font-weight-bold" style="background-color: #dee2e6;">
            Employee Registration
        </span>
        <input class="form-control" type="hidden" id="" asp-for="EmployeeID" />
        <div class="row col-sm-12 mb-1" id="">
            <div class=" col-sm-2">
                <div class="">
                    <label class="">EmployeeNo:</label>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="">
                    <input class="form-control" type="text" asp-for="EmployeeNo" placeholder="EmployeeNo" autocomplete="off" id=""  />
                    <span class="text-danger" asp-validation-for="EmployeeNo"></span>
                </div>
            </div>
        </div>
        <div class="row col-sm-12 mb-1" id="">
            <div class=" col-sm-2">
                <div class="">
                    <label class="">EmployeeName:</label>
                </div>
            </div>
            <div class="col-sm-4">
                <input class="form-control" type="text" id="" asp-for="EmployeeName" placeholder="EmployeeName" autocomplete="off" required  />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
        </div>

        <div class="row col-sm-12 mb-1" id="">
            <div class=" col-sm-2">
                <div class="">
                    <label class="" style="white-space:nowrap">Mobile Number:</label>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="">
                    <input class="form-control" type="text" asp-for="Mobile" placeholder="Mobile" autocomplete="off" id="" required />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row col-sm-12 mb-1" id="">
            <div class=" col-sm-2">
                <div class="">
                    <label class="" style="white-space:nowrap">Email:</label>

                </div>
            </div>
            <div class="col-sm-4">
                <div class="">
                    <input class="form-control" type="text" asp-for="Email" autocomplete="off" placeholder="Email" id="" required  />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row col-sm-12 mb-1" id="">
            <div class=" col-sm-2">
                <div class="">
                    <label class="">Address:</label>

                </div>
            </div>
            <div class="col-sm-4">
                <div class="">
                    <input class="form-control" type="text" asp-for="Address" autocomplete="off" placeholder="Address" id="" required  />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row col-sm-12 mb-1" id="">
            <div class=" col-sm-2">
                <div class="">
                    <label class="">Designation:</label>

                </div>
            </div>
            <div class="col-sm-4">
                <div class="">
                    <select asp-for="DesignationId" id="countryId" class="form-control" >
                        <option value=""> Select Designation</option>
                        @foreach (var item in Model.DesignationList)
                        {
                            <option value="@item.DesignationID">@item.DesignationName</option>
                        }
                    </select>
                    <span asp-validation-for="DesignationId" class="text-danger"></span>
                </div>
            </div>
        </div>


    </div>
    <div class="row col-sm-12 mb-3 justify-content-center">
        <div>
            <button type="submit" asp-action="CreateEmployeePost" class="btn btn-success" style="width:165px">Save</button>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    @*<script src="~/js/addUpdate.js"></script>*@
}

